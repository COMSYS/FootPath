<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uvwxy.footpath"
    android:versionCode="3"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="@string/flowpath" >
        <activity
            android:name="de.uvwxy.footpath2.gui.Loader"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.uvwxy.footpath2.gui.old.Calibrator"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <activity
                android:name=".gui.FlowPathTestGUI"
                android:configChanges="keyboardHidden|orientation"
                android:screenOrientation="portrait" >
            </activity>
            <activity
                android:name="de.uvwxy.footpath2.gui.NavigatorFlowPath.NavigatorFootPath"
                android:configChanges="keyboardHidden|orientation"
                android:label="@string/app_name"
                android:screenOrientation="portrait" >
            </activity>
            <activity
                android:name="de.uvwxy.footpath2.gui.NavigatorFlowPath.NavigatorFlowPath"
                android:configChanges="keyboardHidden|orientation"
                android:label="@string/app_name"
                android:screenOrientation="portrait" >
            </activity>
        </activity>
    </application>

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>

</manifest>